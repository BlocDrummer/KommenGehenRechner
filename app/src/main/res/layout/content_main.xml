<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.phili.kommengehenrechner.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kommenzeit:"
        android:labelFor="@id/etKommenZeit"/>

    <EditText
        android:id="@+id/etKommenZeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textSize="60sp"
        android:focusable="false"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/tvGehenZeit"
        android:text="Gehenzeit:" />

    <TextView
        android:id="@+id/tvGehenZeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp" />

</LinearLayout>
